{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@ionar/form": [
        "libs/form/src/index.ts"
      ],
      "@ionar/*": [
        "dist/libs/*",
        "libs/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
